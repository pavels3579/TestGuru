<div class="row justify-content-center mt-3">
  <div class="col col-md-8">
    <h1><%= t('.header') %></h1>
    <div class="card border-primary">
      <div class="card-body">
        <% if user_signed_in? %>

          <%= render 'shared/errors', resource: @badge %>

          <table class="table table-striped">
          <tr>
            <th><%= t('.title') %></th>
            <th><%= t('.picture') %></th>
          </tr>

          <%= render @badges %>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>
