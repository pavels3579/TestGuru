<div class="row justify-content-center mt-3">
  <div class="col col-md-12">
    <h1><%= t('.header') %></h1>
    <div class="card border-primary">
      <div class="card-body">
        <% if user_signed_in? %>
          <p>
            <%= link_to t('.new_babge'), new_admin_badge_path %>
          </p>

          <%= render 'shared/errors', resource: @badge %>

          <table class="table table-striped">
          <tr>
            <th><%= t('.title') %></th>
            <th><%= t('.picture') %></th>
            <th><%= t('.rule_name') %></th>
            <th><%= t('.rule_value') %></th>
            <th colspan="3"><%= t('.actions') %></th>
          </tr>

          <%= render @badges %>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>
