<tr>
  <td class="align-middle">
    <%= badge.title %>
  </td>

  <td class="align-middle">
    <img src= <%= badge.url %> />
  </td>

  <td class="align-middle">
    <%= badge.rule_name %>
  </td>

  <td class="align-middle">
    <%= badge.rule_value %>
  </td>

  <td class="align-middle"><%= link_to t('shared.show'), admin_badge_path(badge) %></td>

  <td class="align-middle"><%= link_to t('shared.edit'), edit_admin_badge_path(badge) %></td>

  <td class="align-middle">
    <%= link_to t('shared.delete'),
                admin_badge_path(badge),
                method: :delete,
                data:   { confirm: t('shared.are_you_sure?') } %>
  </td>
</tr>
